<h1>ESTA ES AREA DE REGISTRO POSTULANTE</h1>

<div class="btn-group btn-lg btn-block" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-outline-primary">Postulante</button>
    <button type="button" class="btn btn-outline-primary">Empresa</button>
</div>

<br>
<br>

<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">NOMBRE</label>
            <input type="text" class="form-control" id="inputNombre">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">APELLIDOS</label>
            <input type="text" class="form-control" id="inputApellido">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="inputEmail4">DNI</label>
            <input type="text" class="form-control" id="inputDNI">
        </div>
        <div class="form-group col-md-3">
            <label for="inputPassword4">FECHA</label>
            <input type="date" class="form-control" id="inputFecha">
        </div>
        <div class="form-group col-md-3">
            <label for="inputEmail4">CARGAR CV</label>
            <input type="file" class="form-control" id="inputCV">
        </div>
        <div class="form-group col-md-3">
            <label for="inputEmail4">CARGAR FOTO</label>
            <input type="file" class="form-control" id="inputFOTO">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputEmail4">CORREO ELECTRÓNICO</label>
            <input type="email" class="form-control" id="inputEmail4">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">CONTRASEÑA</label>
            <input type="password" class="form-control" id="inputPassword4">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">CONFIRMAR CONTRASEÑA</label>
            <input type="password" class="form-control" id="inputConfPassword4">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputEmail4">DESCRIPCIÓN</label>
            <textarea class="form-control" aria-label="With textarea"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">REGISTRAR</button>
</form>