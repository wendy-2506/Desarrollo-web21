@{
    ViewData["Title"] = "Registro Empresa";
}

<h1 style="text-align:center">Registro de nuevo usuario Empresa</h1>

<div class="btn-group btn-lg btn-block" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-outline-primary" onclick="location='/Registro/Postulante/RegistroPostulante'">Postulante</button>
    <button type="button" class="btn btn-outline-primary active">Empresa</button>
</div>

<br>
<br>

<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputNombre">NOMBRE</label>
            <input type="text" class="form-control" id="inputNombre">
        </div>
        <div class="form-group col-md-6">
            <label for="inputRAZON">RAZON SOCIAL</label>
            <input type="text" class="form-control" id="inputRAZON">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="inputRUC">RUC</label>
            <input type="text" class="form-control" id="inputRUC">
        </div>
        <div class="form-group col-md-6">
            <label for="inputDirec">DIRECCIÓN</label>
            <input type="text" class="form-control" id="inputDirec">
        </div>
        <div class="form-group col-md-3">
            <label for="inputFOTO">CARGAR FOTO</label>
            <input type="file" class="form-control" id="inputFOTO">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputEmail4">CORREO ELECTRÓNICO</label>
            <input type="email" class="form-control" id="inputEmail4">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">CONTRASEÑA</label>
            <input type="password" class="form-control" id="inputPassword4">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">CONFIRMAR CONTRASEÑA</label>
            <input type="password" class="form-control" id="inputConfPassword4">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="inputEmail4">DESCRIPCIÓN</label>
            <textarea class="form-control" aria-label="With textarea"></textarea>
        </div>
    </div>

     <!-- BOTON PARA VENTANA EMERGENTE -->

    <div class="text-center">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#staticBackdrop">
            Registrar
        </button>
    </div>

    <!-- VENTANA EMERGENTE -->
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="text-center">
                    <div class="modal-body">
                        Registro completado
                    </div>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-success" data-dismiss="modal" onclick="location='/LOGIN2/Home/Login'">Aceptar</button>
                </div>
                <br>
                <br>
            </div>
        </div>
    </div>

</form>

<br>
