@{
    ViewData["Title"] = "Olvidar Contraseña";
}

<h1 align="center">¿Has olvidado tu contraseña? </h1>

<hr>
<h5 align="center"> Por favor, ingresa el correo vinculado a tu cuenta </h5>
@*<h5> se enviara un link para poder crear una nueva contraseña </h5>*@
<div class="form-row">
    <div class="form-group col-md-3">

    </div>

    <div class="form-group col-md-6">

        <label for="exampleinputemail1"></label>
        <input type="email" class="form-control" id="txtcorreo" name="correo" aria-describedby="emailhelp">
        <small id="emailhelp" class="form-text text-muted"></small>
    </div>
</div>
@*<input type="button" class="btn btn-success" value="Enviar" onclick="location='/LOGIN2/Home/Login'" />*@


<!-- BOTON PARA VENTANA EMERGENTE -->

<div class="text-center">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
        Enviar Correo
    </button>
</div>

<!-- VENTANA EMERGENTE -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="text-center">
                <div class="modal-body">
                    Se ha enviado los datos al correo registrado
                </div>
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="location='/LOGIN2/Home/Login'">Aceptar</button>
            </div>
            <br>
            <br>
        </div>
    </div>
</div>
