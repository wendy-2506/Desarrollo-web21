@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="btn-group btn-lg btn-block" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-outline-primary active">Mi Perfil</button>
    <button type="button" class="btn btn-outline-primary" onclick="location='/Administrador/Usuarios_Empresas'">Usuarios</button>
    <button type="button" class="btn btn-outline-primary" onclick="location='/Administrador/Ofertas_Publicadas'">Ofertas Publicadas</button>
    <button type="button" class="btn btn-outline-primary" onclick="location='/Administrador/Postulaciones'">Postulaciones</button>
    <button type="button" class="btn btn-outline-primary" onclick="location='/Administrador/Reportes'">Reportes</button>
    <button type="button" class="btn btn-outline-primary" onclick="location='/Administrador/Sugerencias'">Sugerencias</button>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-success" id="btnGuardarCambios">Guardar Cambios</button>
    <button type="button" class="btn btn-danger" id="btnGuardarCancelar" onclick="location='/Administrador/Perfil'">Cancelar</button>
</div>

<form>
    <div class="form-row">
        <div class="file-field col-md-4">
            <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg" class="img-fluid"
                 alt="example placeholder">
        </div>

        <div class="form-group col-md-6">
            <label for="inputNombre">Nombres</label>
            <input type="text" class="form-control" id="inputNombre">

            <label for="inputApellido">Apellidos</label>
            <input type="text" class="form-control" id="inputApellidos">

            <label for="inputUsername">Username</label>
            <input type="text" class="form-control" id="inputUsername">

            <label for="inputEmail">Correo</label>
            <input type="text" class="form-control" id="inputEmail">

            <label for="inputPhone">Telefono</label>
            <input type="text" class="form-control" id="inputPhone">

        </div>

    </div>

</form>
