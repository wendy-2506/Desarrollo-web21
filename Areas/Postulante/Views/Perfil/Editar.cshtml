@{
    ViewData["Title"] = "Editar mi Perfil";
}

<div class="btn-group btn-lg btn-block" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-outline-primary" onclick="location='/Postulante/Publicaciones'">Publicaciones</button>
    <button type="button" class="btn btn-outline-primary" onclick="location='/Postulante/MisOfertas'">Mis Postulaciones</button>
    <button type="button" class="btn btn-outline-primary active">Mi perfil</button>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-success" id="btnGuardarCambios">Guardar Cambios</button>
    <button type="button" class="btn btn-danger" id="btnGuardarCancelar" onclick="location='/Postulante/Perfil'">Cancelar</button>
</div>

<br>

<form>
    <div class="form-row">
        <div class="file-field col-md-3">
            <img src="https://i.ibb.co/CMnr32w/images.jpg" class="img-fluid"
                 alt="example placeholder" width="200" height="200">
        </div>

        <div class="form-group col-md-6">
            <label for="inputNombre">NOMBRE</label>
            <input type="text" class="form-control" id="inputNombre">
            <label for="inputApellido">Apellido</label>
            <input type="text" class="form-control" id="inputApellido">
            <label for="inputDNI">DNI</label>
            <input type="text" class="form-control" id="inputDNI">
            <label for="inputFechNac">Fecha De Nacimiento</label>
            <input type="text" class="form-control" id="inputFechNac">
            <label for="inputEmail">Correo</label>
            <input type="text" class="form-control" id="inputEmail">

        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-3">

        </div>

        <div class="form-group col-md-6">
            <label for="inputCV">CARGAR CV</label>
            <input type="file" class="form-control" id="inputCV">
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-3">

        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">DESCRIPCIÓN</label>
            <textarea class="form-control" aria-label="With textarea"></textarea>
        </div>
        <br>
    </div>
</form>

